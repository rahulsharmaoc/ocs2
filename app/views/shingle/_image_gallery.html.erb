<div id="myGallery" class="carousel slide myGallery" data-ride="carousel">
    <div class="carousel-inner">
    <% shingle[:gallery_images].each_with_index do |image,index| %>      
        <div class="item <%= index.to_i == shingle_active.to_i ? 'active' : '' %>">   
            <%= image_tag image[:img_url] , {class:'d-block w-100'} %>
        </div>
    <% end %>
    </div>
<a class="previous round event-cap" href="#myGallery" role="button" data-slide="prev"><
  <span class="sr-only">Previous</span>
</a>
<a class="next round event-cap" href="#myGallery" role="button" data-slide="next">>
  <span class="sr-only">Next</span>
</a>
<div class="container">
    <ol class="carousel-indicators">
    <% shingle[:gallery_images].each_with_index do |image,index| %>
    <li data-target="#myGallery" data-slide-to="<%= index %>" class="<%= index.to_i == shingle_active.to_i ? 'active' : '' %>">
        <%= image_tag image[:img_url] , {class:'img-responsive'} %>
        <span class="image_name"><%= image[:name] %></span>        
    </li>
    <% end %>
    </ol>
    </div>
</div> 